<launch>

    <group ns="node1">
        <node pkg="usb_cam" type="usb_cam_node" name="cam1">
            <param name="video_device" value="/dev/video0" />
            <param name="framerate" value="15" />
        </node>
        <node name="trackers" pkg="mtf_bridge" type="error_tracker_node" output="screen"> 
            <param name="shm_name" value="shm1"/>
            <remap from="/init_buffer" to="/node1/init_buffer"/>
            <remap from="/input_image" to="/node1/input_image"/>
        </node>
        <node name="SharedImageWriter" pkg="mtf_bridge" type="SharedImageWriter" output="screen"> 
            <param name="shm_name" value="shm1"/>
            <remap from="/camera/image_raw" to="/node1/cam1/image_raw"/>
        </node>
    </group> 

    <node pkg="rqt_geometric_constraints" type="rqt_geometric_constraints" name="geometric_constraints"/> 
    <node pkg="geometric_error" type="error_control" name="error_control"/> 
    <node pkg="error_calculation" type="error_grouper.py" name="error_grouper"/>

</launch>
